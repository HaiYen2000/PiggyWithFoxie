<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fish"
    tools:context=".RegisterScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Account "
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:padding="10dp"
           android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_action_people"
            android:hint="User name..."
            android:textColorHint="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/round"
            android:padding="10dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="64dp"
            android:drawableRight="@drawable/ic_action_name"
            android:hint="Password..."
            android:inputType="textPassword"
            android:textColorHint="@color/white" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/round"
            android:text="Sign up"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/round"
            android:text="Login"
            android:textColor="@color/white" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:text="Forgot the password ?"
            android:textColor="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round"
            android:text="Sign in with Facebook"
            android:textColor="@color/white" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/round"
            android:text="Sign in with Google account"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>